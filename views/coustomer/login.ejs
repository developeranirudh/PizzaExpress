<%- include("../partials/authnav.ejs") %>
<link rel="stylesheet" href="css/login.css">

<section class="login-form">
<div class="login">
    <h2 id="H2">Log-In </h2>
    <form action="/login" method="POST">
        <% if(success && success.length){ %>
            <div>
                <h3 style="color:rgb(3, 143, 14); font-weight: bold;"><%= success %></h3> 
            </div>
        <% } %> 
        
        <% if(error && error.length){ %>
            <div>    
            <h3 style="color:rgb(216, 36, 36);"> <%= error %></h3> 
    </div>  
        <% } %> 
    <label id="label" for="username">E-mail</label><br>
     
     <input type="text"  id="username" name="email"placeholder="E-mail" required><br>
     <label id="label" for="password">Password</label><br>

     <input type="password" id="password" name="password" placeholder="Password"equired><br>
     <button id="login-button" type="submit">Log In</button>
    </form>
    <a href="/register" id="register-form"><h4>Don't have any account?</h4></a>
</div>
</section>
