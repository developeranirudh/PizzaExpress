<%- include("./partials/nav.ejs") %>
<link rel="stylesheet" href="/css/home.css">
<% if(success && success.length){ %>
    <div>
        <div class="bg-green-100 border-t border-b border-green-500 text-green-700 px-4 py-3" role="alert">
            <p class="font-bold"><%= success %></p>
          </div>
    </div>
<% } %> 
<section class="section2">
    <div class="constainer max-auto flex items-center justify-between">
    <div class="left">
     <h6 id="leftone"><em>Are you hungry ?</em></h6>
     <h1 id="lefttwo">What Are You Waiting For?</h1><br>
     <a id="midbutton" type="button" href="#pizzasection">Order Now</a>
    </div>
    <div class="right">
 <img class="pizzaimg"src="/img/pizzaphoto.png"alt="pizzaimage">

    </div>
</div>
</section>
<section class="menu" id="section 3">
<h1 id="allpizza">All Pizza's</h1>
<% if(added && added.length){ %>
    <div>
        <div class="bg-green-100 border-t border-b border-green-500 text-green-700 px-4 py-3" role="alert">
            <p class="font-bold"><%= added %></p>
          </div>
    </div>
<% } %> 
<section class="menuonly" id="pizzasection">
<%datas.forEach(function(data){  %>
    <div id=pizzas>
        <figure>
        <img src="<%=data.image%>" alt="pizza">
        </figure>
        <figcaption>
        <h4><%=data.name%></h4>
        <h6><%=data.size%></h6>
    </figcaption>
    <form action="/cart/<%=data.id%>/add" method="post" >
    <h2 id="rate">&#8377 <%=data.price%></h2>
    <button type="submit" id="cartbutton">+ Add</button>
</form>
    </div>
<%})%>

</section>
</section>
 <script  src="/js/home.js" type="module"></script>   
</body>
<%- include("./partials/footer.ejs") %>

</html>